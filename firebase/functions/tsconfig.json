{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noEmit": false,
    "paths": {
      "@/*": ["../../../*"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "index.ts", "../../utils"]
}
